---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login - Task Manager">
  <main class="container" style="max-width: 400px; margin: 2rem auto;">
    <div class="card">
      <h1>Login</h1>

      <form id="loginForm">
        <div class="form-group">
          <label for="username">Username:</label>
          <input
            type="text"
            id="username"
            name="username"
            class="form-input"
            required
          />
        </div>

        <div class="form-group">
          <label for="user-credential">Password:</label>
          <input
            type="password"
            id="user-credential"
            name="password"
            class="form-input"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
      </form>

      <div id="error" class="error-message" style="display: none;"></div>
    </div>
  </main>
</Layout>

<script>
  // Get the return_to parameter from URL
  const urlParams = new URLSearchParams(window.location.search);
  const returnTo = urlParams.get('return_to');

  /**
   * Validates that a URL is safe for redirection (local URLs only).
   * Prevents open redirect vulnerabilities.
   */
  function isLocalUrl(url) {
    if (!url) return false;

    // Must start with / but NOT // (which would be protocol-relative)
    if (url.startsWith('/') && !url.startsWith('//')) {
      // Additional check: no backslashes (IE quirk), no control chars
      if (!/[\\<>]/.test(url)) {
        return true;
      }
    }

    // Alternatively, validate against current origin
    try {
      const parsed = new URL(url, window.location.origin);
      return parsed.origin === window.location.origin;
    } catch {
      return false;
    }
  }

  document.getElementById('loginForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const username = document.getElementById('username').value;
    const userCredential = document.getElementById('user-credential').value;
    const errorDiv = document.getElementById('error');

    try {
      const response = await fetch('/api/auth/login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ username, password: userCredential }),
      });

      const data = await response.json();

      if (response.ok) {
        // Redirect to return_to if present AND safe, otherwise go to homepage
        // Prevents open redirect attacks by validating the URL is local
        const redirectUrl = returnTo && isLocalUrl(returnTo) ? returnTo : '/';
        window.location.href = redirectUrl;
      } else {
        // Handle both old format (data.error = string) and new format (data.error = {code, message})
        const errorMessage =
          typeof data.error === 'object' ? data.error.message : data.error;
        errorDiv.textContent = errorMessage || 'Login failed';
        errorDiv.style.display = 'block';
      }
    } catch (error) {
      errorDiv.textContent = 'Network error. Please try again.';
      errorDiv.style.display = 'block';
    }
  });
</script>
