---
import Layout from '../../../layouts/Layout.astro';
import { Auth } from '../../../lib/auth.js';

// Check if user is authenticated
const sessionId = Auth.getSessionFromRequest(Astro.request);
const session = await Auth.getSessionUser(sessionId);

if (!session) {
  return Astro.redirect('/login');
}
---

<Layout title="Device Denied">
  <div class="container">
    <div class="auth-container">
      <div class="card denied-card">
        <div class="denied-icon">âœ•</div>
        <h1>Authorization Denied</h1>
        <p>
          You have denied access to the device. The device will not be able to
          access your account.
        </p>
        <p class="note">
          If this was a mistake, you can try authorizing the device again using a new code.
        </p>
        <div class="actions">
          <a href="/" class="btn btn-primary">Go to Dashboard</a>
          <a href="/oauth/device" class="btn btn-secondary">Authorize Another Device</a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    padding: 2rem;
  }

  .card {
    max-width: 480px;
    width: 100%;
    padding: 2rem;
    background: var(--card-bg, white);
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    text-align: center;
  }

  .denied-card {
    border-top: 4px solid #ef4444;
  }

  .denied-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    background-color: #ef4444;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
  }

  .card h1 {
    margin-bottom: 1rem;
    color: #ef4444;
  }

  .card p {
    margin-bottom: 1rem;
    color: var(--text-color, #374151);
  }

  .note {
    color: var(--text-muted, #64748b);
    font-size: 0.875rem;
  }

  .actions {
    margin-top: 1.5rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .btn-primary {
    background-color: var(--primary-color, #3b82f6);
    color: white;
  }

  .btn-primary:hover {
    background-color: var(--primary-hover, #2563eb);
  }

  .btn-secondary {
    background-color: var(--secondary-color, #64748b);
    color: white;
  }

  .btn-secondary:hover {
    background-color: var(--secondary-hover, #475569);
  }
</style>
