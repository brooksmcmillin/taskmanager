		"@types/node": "^25.0.9",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"sass": "^1.69.7",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tslib": "^2.7.0",
		"typescript": "^5.0.0",
		"vite": "^5.0.0"
	},
	"dependencies": {
		"svelte-dnd-action": "^0.9.50"
	}
